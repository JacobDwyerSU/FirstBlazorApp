@inherits LayoutComponentBase

<header class="top-row px-4">
    <h3>Stockholms universitetsbibliotek</h3>
    <h1>Mitt bibliotek</h1>
    <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
</header>

<div class="page">

    <main>
        <aside class="sidebar">
            <SideNavMenu />
        </aside>

        <article class="content px-4">
            @Body

            @* Required *@
            <MudThemeProvider />
            <MudPopoverProvider />

            @* Needed for dialogs *@
            <MudDialogProvider />

            @* Needed for snackbars *@
            <MudSnackbarProvider />
        </article>
    </main>
</div>
