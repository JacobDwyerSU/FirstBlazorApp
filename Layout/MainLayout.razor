@inherits LayoutComponentBase

<header class="top-row px-4">
    <a href="https://www.su.se/stockholms-universitetsbibliotek/">
        <img src="/images/SuLogo.svg" alt="Stockholms universitetslogotyp" />
    </a>
    <div id="header-content-container">
        <div id="header-text">
            <h3>Stockholms universitetsbibliotek</h3>
            <h1>Mitt bibliotek</h1>
        </div>

        <div id="header-icons">
            <MudIcon Icon="@Icons.Material.Filled.Person" Size="Size.Large" id="header-profile" />
            <MudIcon Icon="@Icons.Material.Filled.Menu" Size="Size.Large" id="header-menu" />
        </div>
    </div>
    
</header>

<div class="page">

    <main>
        <aside class="sidebar">
            <SideNavMenu />
        </aside>

        <article class="content px-4">
            @Body

            @* Required *@
            <MudThemeProvider />
            <MudPopoverProvider />

            @* Needed for dialogs *@
            <MudDialogProvider />

            @* Needed for snackbars *@
            <MudSnackbarProvider />
        </article>
    </main>
</div>
