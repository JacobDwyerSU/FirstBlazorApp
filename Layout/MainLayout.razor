@inherits LayoutComponentBase

<div class="top-row px-4">
    <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
</div>

<div class="page">

    <main>
        <div class="sidebar">
            <SideNavMenu />
        </div>

        <article class="content px-4">
            @Body

            @* Required *@
            <MudThemeProvider />
            <MudPopoverProvider />

            @* Needed for dialogs *@
            <MudDialogProvider />

            @* Needed for snackbars *@
            <MudSnackbarProvider />
        </article>
    </main>
</div>
