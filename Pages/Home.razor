@page "/"

<PageTitle>Mitt bibliotek</PageTitle>

<MudGrid>
    <MudItem xs="12">
        <h1>Hej Joe doe,</h1>

        Här har vi samla våra tjänster sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna vero.
    </MudItem>

    <!-- foreach card -->
    <MudItem id="home-latest" xs="6">
        <MudCard>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudIcon Icon="@Icons.Material.Filled.Newspaper" />
                    <MudText Typo="Typo.h6">Senaste</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudList T="string">
                    @foreach (String l in latest) {
                        <MudListItem Icon="@Icons.Material.Filled.ArrowForward" Text="@l"></MudListItem>
                    }
                </MudList>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="6">
        <MudCard>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6"><MudIcon Icon="@Icons.Material.Filled.Notifications" />Mina Notiser</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText>This day everything happened.</MudText>
                <MudText Typo="Typo.body2">The quick, brown fox jumps over a lazy dog.</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary">Read More</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>

    <MudItem xs="12">
        <MudPaper Class="pa-4" Outlined="true">
            
            <h1><MudIcon Icon="@Icons.Material.Filled.Apps" />Skapa ett "Mitt bibliotek konto"</h1>
            <p class="pa-4">Med ett konto kan du göra ditt och datt... , consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero.</p>
            <div class="paper-card-actions">
                <MudButton Variant="Variant.Outlined" Color="Color.Default">Skapa din pinkod</MudButton>
            </div>
        </MudPaper>
    </MudItem>

    <MudItem xs="6" class="@(hideTalbokCard? "hidden" : "")">
        <MudCard>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6"><MudIconButton Icon="@Icons.Material.Filled.HearingDisabled" Color="Color.Default" />För dig som har funktionsnedsättning: Talböcker</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudIconButton OnClick="toggleTalbok" Icon="@Icons.Material.Filled.Close" Color="Color.Default" />
                </CardHeaderActions>
            </MudCardHeader>
            <MudCardContent>
                <MudText>This day everything happened.</MudText>
                <MudText Typo="Typo.body2">The quick, brown fox jumps over a lazy dog.</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Outlined" Color="Color.Default">Boka ett möte</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>

    <MudItem xs="6">
        <MudCard>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6"><MudIconButton Icon="@Icons.Material.Filled.AdsClick" Color="Color.Default" />Boka ett möte för sökhandledning</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudIconButton Icon="@Icons.Material.Filled.Close" Color="Color.Default" />
                </CardHeaderActions>
            </MudCardHeader>
            <MudCardContent>
                <MudText>This day everything happened.</MudText>
                <MudText Typo="Typo.body2">The quick, brown fox jumps over a lazy dog.</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Outlined" Color="Color.Default">Boka ett möte</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>

    <MudItem xs="6">
        <MudCard>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6"><MudIconButton Icon="@Icons.Material.Filled.Print" Color="Color.Default" />Skriva ut</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudIconButton Icon="@Icons.Material.Filled.Close" Color="Color.Default" />
                </CardHeaderActions>
            </MudCardHeader>
            <MudCardContent>
                <MudText>This day everything happened.</MudText>
                <MudText Typo="Typo.body2">The quick, brown fox jumps over a lazy dog.</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Outlined" Color="Color.Default">Ladda mitt kort</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>

    <MudItem xs="6">
        <MudCard>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6"><MudIconButton Icon="@Icons.Material.Filled.QuestionAnswer" Color="Color.Default" />HUR GÖR JAG</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardActions>
                <MudButton Variant="Variant.Outlined" Color="Color.Default" FullWidth="true">Hur gör jag med handledning?</MudButton>
                <MudButton Variant="Variant.Outlined" Color="Color.Default" FullWidth="true">Hur kan jag beställa böcker?</MudButton>
                <MudButton Variant="Variant.Outlined" Color="Color.Default" FullWidth="true">Hur kan jag hyra en vagn eller hyra ett skåp?</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>

</MudGrid>

@code {
    private bool hideTalbokCard = false;
    private List<String> latest = ["AI söktjänst Keenious", "Video: Förbättra dina sökord", "Video: Referenshanteringsprogram"]; // should be just a link?
    private List<String> notifications = ["Böcker > påminnelse", "Lån av fjärrlån", "Magasin > beställningar"]; // consider making Notifications class including link, icon ...

    void toggleTalbok()
    {
        hideTalbokCard = !hideTalbokCard;
    }
}